include ../portrait/portrait
include ../profile/profile
include ../contact/contact
include ../skills/skills
include ../education/education
include ../experience/experience
include ../software/software

mixin layout
  main.layout
    .layout__column-left
      .layout__portrait
        +portrait({
          name: 'name here',
          surname: 'surname',
          career: 'graphic designer',
          photoUrl: getAssetUrl('/root/favicon.png')
        })

      .layout__section-left
        +profile

      .layout__section-left
        +contact([
          {
            title: 'address',
            data: 'Main Street, City.'
          },
          {
            title: 'e-mail',
            data: 'contact@domain.com'
          },
          {
            title: 'phone',
            data: '555-555-555'
          },
          {
            title: 'website',
            data: 'www.yourweb.com'
          }
        ])

      .layout__section-left
        +skills([
          {
            title: 'creative',
            points: 9
          },
          {
            title: 'teamwork',
            points: 11
          },
          {
            title: 'innovate',
            points: 6
          },
          {
            title: 'communication',
            points: 11
          }
        ])

    .layout__column-right
      .layout__section-right
        -
          var educationEntry = {
            header: {
              title: 'master degree',
